public static int pairs(int k, List<Integer> arr) {
   
    Collections.sort(arr);
    HashSet<Integer> h=new HashSet<>();
    for(int n:arr){
        h.add(n);
        
    }
    int count =0;
    for(int i=0;i<arr.size()-1;i++){
        int s=arr.get(i)+k;
        if(h.contains(s)){
            count++;
        }
  }
     return count;
    }
}
